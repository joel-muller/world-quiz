FROM golang:1.25 AS build-stage

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /world-quiz

FROM gcr.io/distroless/base-debian11 AS build-release-stage

WORKDIR /

COPY --from=build-stage /world-quiz /world-quiz
COPY --from=build-stage /app/data /data

EXPOSE 8080

ENTRYPOINT ["/world-quiz"]
